{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "public",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "public"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "target": "es5",
      "baseUrl": "."
    }
  }
}
