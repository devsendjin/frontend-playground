{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "public",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@scripts/*": ["assets/scripts/*"],
      "@styles/*": ["assets/styles/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/assets/js/**/*.ts", "./scripts/**/*.ts"],
  "exclude": ["node_modules", "public"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "target": "es5",
      "baseUrl": "."
    }
  }
}
