extends /playground

append config
  - config.contentAttributes = { class: 'content-responsive-table' }

append content
  table.view-table.table-wrap
    thead
      tr
        th Thumbnail
        th Title
        th Price
        th Material
        th Color
    tbody
      - let i = 0;
      while i < 10
        - i++
        tr
          td.view-table-photo
            img(alt='Product 1' src=randomImageUrl(100, 100) width='100' height='100' onload='this.classList.add("visible")')
          td(data-label='Title')= _faker.commerce.product()
          td(data-label='Price')= `${_faker.commerce.price(100, 2000, 0)} $`
          td(data-label='Material')= _faker.commerce.productAdjective()
          td(data-label='Color')= _faker.color.human()
