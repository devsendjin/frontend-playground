{
  "name": "html-playground",
  "version": "1.0.0",
  "description": "",
  "main": "./public/index.js",
  "scripts": {
    "start": "run-p eleventy:serve webpack:watch",
    "build": "pnpm clean && cross-env NODE_ENV=production run-s webpack:build eleventy",
    "refresh": "pnpm clean && run-s webpack:build eleventy",

    // eleventy
    "eleventy": "eleventy --config \"./scripts/eleventy.config.js\"",
    "eleventy:debug": "cross-env DEBUG=Eleventy* pnpm eleventy",
    "eleventy:serve": "pnpm eleventy -- --serve",
    "eleventy:help": "pnpm eleventy -- --help",

    // webpack
    "webpack:watch": "webpack --config \"./scripts/webpack.config.ts\" --progress --watch",
    "webpack:build": "webpack --config \"./scripts/webpack.config.ts\" --progress",
    "webpack:build:prod": "cross-env NODE_ENV=production webpack --config \"./scripts/webpack.config.ts\" --progress",

    // prettier
    "prettier": "prettier --tab-width 2 --bracket-same-line --prose-wrap preserve --trailing-comma es5 --jsx-single-quote --print-width 120 --end-of-line lf --arrow-parens always --ignore-unknown --write \"./src/assets/styles/*.scss\" \"./src/pages/**/*.(scss|ts)\"",


    // other
    "serve": "browser-sync start --config \"./scripts/browsersync.config.js\"",
    "clean": "ts-node \"./scripts/clean.ts\"",

    // utils
    "json": "json5 --validate \"./package.json5\" && \
      json5 \
      --space 2 \
      --out-file \"./package.json\" \
      \"./package.json5\"",
  },
  "keywords": [],
  "author": {
    "name": "Anatoliy Skichko",
    "email": "anatoliy.skichko.dev@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    // types
    "@types/node": "^17.0.23",
    "@types/postcss-flexbugs-fixes": "^4.2.1",

    // eleventy
    "@11ty/eleventy": "^1.0.0",
    // "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    // eleventy utils
    "html-minifier": "^4.0.0",
    // "prettify-xml": "^1.2.0",
    "js-beautify": "^1.14.0",
    // "markdown-it": "^12.3.2",
    // "markdown-it-emoji": "^2.0.0",
    "pug": "^3.0.2",
    "util": "^0.12.4",

    // webpack
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    // plugins
    "terser-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^2.6.0",
    "csso-webpack-plugin": "^2.0.0-beta.3",
    // loaders
    "css-loader": "^6.7.1",
    "sass-loader": "^12.6.0",
    "postcss-loader": "^6.2.1",
    "style-loader": "^3.3.1",
    "babel-loader": "^8.2.4",
    "ts-loader": "^9.2.8",

    // js / ts
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "typescript": "^4.6.2",

    // css
    "sass": "^1.50.0",
    "postcss": "^8.4.12",
    "autoprefixer": "^10.4.4",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^7.4.3",

    // utils
    "ts-node": "^10.7.0",
    "browser-sync": "^2.27.7",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "json5": "^2.2.0",
    "colors": "^1.4.0",
    "tslib": "^2.3.1",
    prettier: '^2.6.2',

    // monorepo packages
    "@frontend-playground/config": "workspace:^1.0.0"
  },
  "dependencies": {
    // monorepo packages
    "@frontend-playground/shared": "workspace:^1.0.0",
    // "dayjs": "^1.11.0",
    // "highlight.js": "^11.5.0",
    // "gsap": "^3.9.1",
  },
  "browserslist": [
    "defaults",
  ],
}
