// tsconfig in details
// https://gist.github.com/KRostyslav/82a25c469ffa6652825d58537ac6bc22
// @docs http://json.schemastore.org/tsconfig
{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "strict": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES6",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "paths": {
      "@/*": ["*"],
      "@@/*": ["../"],
      "@styles/*": ["assets/styles/*"]
    },
    "typeRoots": ["src/types", "src/global.d.ts", "../../node_modules/@types"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "global.d.ts", "../shared/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "target": "es5",
      "baseUrl": "scripts"
    }
  }
}
