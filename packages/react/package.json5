{
  "name": "@frontend-playground/react",
  "version": "1.0.0",
  "description": "",
  "main": "dist/js/index.js",
  "scripts": {
    "start": "pnpm webpack:serve",
    "build": "cross-env NODE_ENV=production run-s build:public build:dist",
    "build:public": "pnpm clean:public && pnpm webpack:build",
    "build:dist": "pnpm clean:dist && cross-env IS_DISTRIBUTED=true pnpm webpack:build",
    "watch": "pnpm webpack:watch",

    // webpack
    "webpack-tool": "webpack --config \"./scripts/webpack.config.ts\" --progress",
    "webpack:serve": "webpack serve --open-app-name 'google chrome' --config \"./scripts/webpack.config.ts\" --progress",
    "webpack:watch": "pnpm webpack-tool --watch",
    "webpack:build": "pnpm webpack-tool",
    "webpack:config:test": "webpack configtest \"./scripts/webpack.config.ts\"",

    // prettier
    "prettier": "prettier --config \"../prettier.config.js\" --ignore-unknown --write",
    "prettier:src": "pnpm prettier \"./src/**/*\" \"./*.ts\"",
    "prettier:changed": "pnpm prettier $( git status | awk -F ' {2,}' '/modified:|new file:/ {print $2}' | grep -E 'src.*\\.(tsx?|s[ac]ss)')",

    // clean
    "clean:public": "rimraf \"./public/*\"",
    "clean:dist": "rimraf \"./dist/*\"",

    "serve": "browser-sync start --config \"./scripts/browser-sync.config.js\"",

    // utils
    "json": "json5 --validate \"./package.json5\" && \
      json5 \
      --space 2 \
      --out-file \"./package.json\" \
      \"./package.json5\"",
  },
  "keywords": [],
  "author": "Anatoliy Skichko",
  "license": "ISC",
  "devDependencies": {
    // js (transformers)
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.7",

    // types
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@types/node": "^17.0.31",
    "@types/postcss-flexbugs-fixes": "^4.2.1",

    // webpack
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    // plugins
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.5", // hot-reload, requires react-refresh to be present
    "@types/circular-dependency-plugin": "^5.0.5",
    "circular-dependency-plugin": "^5.2.2",
    "csso-webpack-plugin": "^2.0.0-beta.3",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.0",
    "terser-webpack-plugin": "^5.3.1",
    // loaders
    "style-loader": "^3.3.1", // css
    "css-loader": "^6.7.1", // css
    "postcss-loader": "^6.2.1", // css
    "sass-loader": "^12.6.0",
    "babel-loader": "^8.2.5", // js
    "ts-loader": "^9.3.0",
    "@svgr/webpack": "^6.2.1",
    "url-loader": "^4.1.1",
    "file-loader": "^6.2.0",
    "pug-loader": "^2.4.0",

    // scss / css
    "sass": "^1.51.0",
    "postcss": "^8.4.13",
    "postcss-preset-env": "^7.5.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "autoprefixer": "^10.4.7",

    // typescript
    "typescript": "^4.6.4",
    "ts-node": "^10.7.0",

    // utils
    "json5": "^2.2.1",
    "prettier": "^2.6.2",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5", // run scripts sequentially or parallel
    "tslib": "^2.4.0",
    "browser-sync": "^2.27.7",
    "rimraf": "^3.0.2",

    // other
    "react-refresh": "^0.13.0",

    // monorepo packages
    "@frontend-playground/config": "workspace:^1.0.0"
  },
  "dependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-router-dom": "6.3.0",
    "immer": "^9.0.12", // immutable data processing
    "classnames": "^2.3.1", // handle css classes
    "react-bootstrap": "^2.3.1",
    "bootstrap": "^5.1.3",
    "gsap": "^3.10.4",

    "change-case": "^4.1.2",

    // localization
    "i18next": "^21.6.16",
    "react-i18next": "^11.16.8",
    "i18next-browser-languagedetector": "^6.1.4",

    // redux
    "redux": "^4.2.0",
    "@redux-devtools/extension": "^3.2.2",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-thunk": "^2.4.1",
    "react-redux": "^8.0.1",

    // error handlers
    "react-error-boundary": "^3.1.4",

    // monorepo packages
    "@frontend-playground/shared": "workspace:^1.0.0"
  }
}
