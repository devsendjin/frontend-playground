{
  "name": "html",
  "version": "1.0.0",
  "description": "",
  "main": "public/index.js",
  "scripts": {
    "start": "yarn run-p watch server",
    "build": "cross-env NODE_ENV=production npm run dev:build",
    "watch": "webpack --config \"./webpack.config.js\" --watch",
    "dev:build": "webpack --config \"./webpack.config.js\"",

    "prettier": "prettier --config \"../prettier.config.js\" --write \"./public/index.html\" \"./src/**/*\"",

    "server": "browser-sync start \
      --open \
      --no-notify \
      --server \"./public\" \
      --files \"./**/*.(html|css|js)\" \
      --port 4000",

    "json": "json5 --validate \"./package.json5\" && \
      json5 \
      --space 2 \
      --out-file \"./package.json\" \
      \"./package.json5\"",
  },
  "keywords": [],
  "author": "Anatoliy Skichko",
  "license": "ISC",
  "devDependencies": {
    // webpack
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    // plugins
    "@soda/friendly-errors-webpack-plugin": "^1.8.1",
    "csso-webpack-plugin": "^2.0.0-beta.3",
    "terser-webpack-plugin": "^5.3.0",
    "mini-css-extract-plugin": "^2.4.6",
    // loaders
    "css-loader": "^6.5.1",
    "postcss-loader": "^6.2.1",
    "sass-loader": "^12.4.0",
    "ts-loader": "^9.2.6",


    // styles
    "sass": "^1.45.2",
    "postcss": "^8.4.5",
    "postcss-preset-env": "^7.2.0",
    "autoprefixer": "^10.4.1",
    "postcss-flexbugs-fixes": "^5.0.2",


    // typescript
    "typescript": "^4.5.4",


    // utils
    "json5": "^2.2.0",
    "browser-sync": "^2.27.7",
    "prettier": "2.5.1",
    "npm-run-all": "^4.1.5",
    "cross-env": "^7.0.3",
  },
  "browserslist": [
    "defaults"
  ]
}
