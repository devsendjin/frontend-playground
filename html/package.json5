{
  "name": "html",
  "version": "1.0.0",
  "description": "",
  "main": "public/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development run-p build:webpack:watch server",
    "build": "cross-env NODE_ENV=production npm run build:webpack --config \"./webpack.config.js\"",
    "s": "run-p build:webpack:watch server -- --environment NODE_ENV:development",
    "b": "npm run build:rollup -- --environment NODE_ENV:production",
    "build:webpack:watch": "webpack --config \"./webpack.config.js\" --watch",
    "build:rollup:watch": "rollup -c \"./rollup.config.js\" -w",
    "build:webpack": "webpack -c \"./rollup.config.js\"",
    "build:rollup": "rollup -c \"./rollup.config.js\"",
    "prettier": "prettier --config \"../prettier.config.js\" --write \"./public/index.html\" \"./src/**/*\"",
    "server": "browser-sync start --server \"./public\" --files \"./**/*.(html|css|js)\" --port 4000 --open --no-notify",
    "json5": "json5 --validate \"./package.json5\" && json5 --space 2 --out-file \"./package.json\" \"./package.json5\"",
  },
  "keywords": [],
  "author": "Anatoliy Skichko",
  "license": "ISC",
  "devDependencies": {
    // rollup
    "rollup": "^2.63.0",
    "rollup-plugin-terser": "^7.0.2", // js
    "rollup-plugin-typescript2": "^0.31.1", // ts
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.2",
    "@rollup/plugin-replace": "^3.0.1",

    // styles
    "rollup-plugin-styles": "^3.14.1",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.45.2",
    "postcss-preset-env": "^7.2.0",
    "autoprefixer": "^10.4.1",

    // webpack
    "css-loader": "^6.5.1",
    "@soda/friendly-errors-webpack-plugin": "^1.8.1",
    "csso-webpack-plugin": "^2.0.0-beta.3",
    "terser-webpack-plugin": "^5.3.0",
    "mini-css-extract-plugin": "^2.4.6",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^6.2.1",
    "sass-loader": "^12.4.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "ts-loader": "^9.2.6",

    // typescript
    "typescript": "^4.5.4",

    // utils
    "json5": "^2.2.0",
    "browser-sync": "^2.27.7",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "cross-env": "^7.0.3",
  },
  "browserslist": [
    "defaults"
  ]
}
