{
  "name": "react",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    // "start": "run-p \"dev:watch\" \"prettier:watch\"",
    // "prettier:watch": "onchange -d 1000 \"./src/**/*.{tsx,scss}\" -- ./node_modules/.bin/prettier --config \"../prettier.config.js\" --write {{file}}",

    "start": "yarn dev:watch",
    "build": "cross-env NODE_ENV=production webpack --config \"./scripts/webpack.config.js\"",

    "dev:watch": "webpack serve --config \"./scripts/webpack.config.js\"",
    "dev:build": "webpack --config \"./scripts/webpack.config.js\"",

    "prettier": "prettier --config \"../prettier.config.js\" --write \"./src/**/*\"",

    // webpack configs
    "config:build": "yarn babel \
      --no-babelrc \
      --no-comments \
      --minified \
      --source-maps false \
      --out-dir \"./scripts\" \
      --plugins @babel/plugin-transform-modules-commonjs \
      \"./scripts/src/*\"",
    "config:prettier": "prettier --config \"../prettier.config.js\" --write \"./scripts/src/*\"",
    "config:test": "webpack configtest \"./scripts/webpack.config.js\"",

    // utils
    "json": "json5 --validate \"./package.json5\" && \
      json5 \
      --space 2 \
      --out-file \"./package.json\" \
      \"./package.json5\"",
  },
  "keywords": [],
  "author": "Anatoliy Skichko",
  "license": "ISC",
