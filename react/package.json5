    "sass": "^1.49.7",
    "postcss": "^8.4.6",
    "postcss-preset-env": "^7.3.1",
    "postcss-flexbugs-fixes": "^5.0.2",


    // typescript
    "typescript": "^4.5.5",
    "ts-node": "^10.4.0",


    // utils
    "json5": "^2.2.0",
    "prettier": "^2.5.1",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5", // run scripts sequentially or parallel


    // other
    "react-refresh": "^0.11.0",
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "6",
