{
  "name": "react",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "start": "webpack serve --config \"./scripts/webpack.config.js\"",
    "build": "cross-env NODE_ENV=production webpack --config \"./scripts/webpack.config.js\"",

    "build:dev": "webpack --config \"./scripts/webpack.config.js\"",

    "prettier:all": "yarn prettier \"./src/**/*\"",
    "prettier": "prettier --config \"../prettier.config.js\" --ignore-unknown --write",

    // webpack configs
    "config:build": "yarn babel \
      --no-babelrc \
      --no-comments \
      --minified \
      --source-maps false \
      --out-dir \"./scripts\" \
      --plugins @babel/plugin-transform-modules-commonjs \
      \"./scripts/src/*\"",
    "config:prettier": "prettier --config \"../prettier.config.js\" --write \"./scripts/src/*\"",
    "config:test": "webpack configtest \"./scripts/webpack.config.js\"",

    // utils
    "json": "json5 --validate \"./package.json5\" && \
      json5 \
      --space 2 \
      --out-file \"./package.json\" \
      \"./package.json5\"",
  },
  "keywords": [],
  "author": "Anatoliy Skichko",
  "license": "ISC",
  "devDependencies": {
    // js (transformers)
    "@babel/cli": "^7.16.8", // for config:build command
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/plugin-transform-modules-commonjs": "^7.16.8", // for config:build command

    // types
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/node": "^17.0.14",


    // webpack
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    // plugins
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4", // hot-reload, requires react-refresh to be present
    "@soda/friendly-errors-webpack-plugin": "^1.8.1",
    "circular-dependency-plugin": "^5.2.2",
    "csso-webpack-plugin": "^2.0.0-beta.3",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.5.3",
    "terser-webpack-plugin": "^5.3.1",
    "webpackbar": "^5.0.2",
    // loaders
    "style-loader": "^3.3.1", // css
    "css-loader": "^6.6.0", // css
    "postcss-loader": "^6.2.1", // css
    "sass-loader": "^12.4.0",
    "babel-loader": "^8.2.3", // js
    "ts-loader": "^9.2.6",
    "@svgr/webpack": "^6.2.1",
    "url-loader": "^4.1.1",
    "file-loader": "^6.2.0",
    "source-map-loader": "^3.0.1",


