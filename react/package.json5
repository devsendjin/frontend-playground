    "ts-node": "^10.4.0",


    // utils
    "json5": "^2.2.0",
    "prettier": "^2.5.1",
    "cross-env": "^7.0.3",


    // other
    "react-refresh": "^0.11.0",
    "onchange": "^7.1.0", // watch files and run any js util for changed files
    "npm-run-all": "^4.1.5", // run scripts sequentially or parallel
