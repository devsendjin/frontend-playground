    // js (transformers)
    "@babel/cli": "^7.16.8", // for config:build command
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.8",
    "@babel/plugin-transform-modules-commonjs": "^7.16.8", // for config:build command


    // types
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/node": "^17.0.9",


    // webpack
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3",
    // plugins
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4", // hot-reload, requires react-refresh to be present
    "@soda/friendly-errors-webpack-plugin": "^1.8.1",
    "circular-dependency-plugin": "^5.2.2",
    "csso-webpack-plugin": "^2.0.0-beta.3",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.5.2",
    "terser-webpack-plugin": "^5.3.0",
    "webpackbar": "^5.0.2",
